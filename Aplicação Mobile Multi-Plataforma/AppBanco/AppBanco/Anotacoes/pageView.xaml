<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBanco.Views.pageView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#13CE66">
            <Label Text="Anotação"></Label>
            <Entry Text="{Binding Nome}"></Entry>
            <Label Text="Observações"></Label>
            <Entry Text="{Binding Observacoes}"></Entry>
            <Label Text="Marcar como concluida?"></Label>
            <Switch IsToggled="{Binding Finalizado}"></Switch>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button BorderRadius="15" BackgroundColor="#3B4859" TextColor="White" Text="Salvar" Clicked="btSalvar"></Button>
                <Button BorderRadius="15" BackgroundColor="#3B4859" TextColor="White" Text="Excluir" Clicked="btExcluir"></Button>
                <Button BorderRadius="15" BackgroundColor="#3B4859" TextColor="White" Text="Cancelar" Clicked="btCancelar"></Button>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>