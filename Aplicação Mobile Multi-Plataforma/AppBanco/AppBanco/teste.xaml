<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBanco.teste">
    <ContentPage.Content>
        <StackLayout>

        <ListView x:Name="lista"    >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal"  Margin="10">

                            <StackLayout VerticalOptions="Center" HorizontalOptions="StartAndExpand" >
                                    <Label x:Name="lebol" Text="{Binding Numero_Chamada}" ></Label>


                            </StackLayout>
                            <StackLayout VerticalOptions="Center" HorizontalOptions="EndAndExpand" >

                                <Entry Placeholder="Nome" x:Name="entrada" Keyboard="Default" Text="{Binding Nome}" ></Entry>

                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>